<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Flashlight" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimaryVariant">@color/status_bar_color</item>
        <!-- Secondary brand color. -->
        <item name="android:navigationBarColor">@color/status_bar_color</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.Flashlight" parent="Base.Theme.Flashlight" />

    <style name="SplashScreen" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_layer</item>
        <item name="colorPrimaryVariant">@color/status_bar_color</item>
        <item name="android:navigationBarColor">@color/status_bar_color</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

</resources>